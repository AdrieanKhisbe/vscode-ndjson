{
  "name": "vscode-ndjson",
  "displayName": "NDJSON Colorizer",
  "description": "colorizes NDJSON (Newline Delimted JSON) files",
  "version": "1.0.0-alpha.0",
  "publisher": "adrieankhisbe",
  "license": "MIT",
  "icon": "images/ndjson.png",
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/src/extension",
  "activationEvents": [
    "onLanguage:ndjson"
  ],
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "lint": "eslint src --ext .json,.ts",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@-k/eslint-plugin": "^0.2.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.5",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.6.0",
    "typescript": "^3.6.4",
    "vscode": "^1.1.36"
  },
  "contributes": {
    "languages": [
      {
        "id": "ndjson",
        "aliases": [
          "NDJSON",
          "nd-json"
        ],
        "extensions": [
          ".ndjson"
        ],
        "configuration": "./src/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ndjson",
        "scopeName": "source.ndjson",
        "path": "./src/ndjson.tmLanguage.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AdrieanKhisbe/vscode-ndjson"
  },
  "bugs": {
    "url": "https://github.com/AdrieanKhisbe/vscode-ndjson/issues"
  }
}
