{
  "name": "vscode-ndjson",
  "displayName": "VsCode NDJson",
  "description": "Language Support for NDJson (Newline Delimted JSON) files",
  "version": "0.9.999",
  "publisher": "adrieankhisbe",
  "preview": true,
  "license": "MIT",
  "icon": "images/ndjson.png",
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/src/extension",
  "activationEvents": [
    "onLanguage:ndjson"
  ],
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "lint": "eslint . --ext .json,.ts",
    "compile": "tsc -watch -p ./",
    "test:unit": "node out/test",
    "test": "npm run lint && npm run test:unit"
  },
  "devDependencies": {
    "@-k/eslint-plugin": "^0.2.0",
    "@types/chai": "^4.2.4",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.5",
    "@types/vscode": "^1.39.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2"
  },
  "contributes": {
    "languages": [
      {
        "id": "ndjson",
        "aliases": [
          "NDJSON",
          "nd-json"
        ],
        "extensions": [
          ".ndjson"
        ],
        "configuration": "./src/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ndjson",
        "scopeName": "source.ndjson",
        "path": "./src/ndjson.tmLanguage.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AdrieanKhisbe/vscode-ndjson"
  },
  "bugs": {
    "url": "https://github.com/AdrieanKhisbe/vscode-ndjson/issues"
  }
}
